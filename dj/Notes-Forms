# forms.py

from django.forms improt Form

class UserRegForm(forms.Form):
name = forms.CharField()
email = forms.CharField()
mobile =forms.IntegerField()

from django.forms improt ModelForm
class UserRegForm(forms.ModelForm):
        model=Employee 
        fields="__all__"



